<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context="com.steadtech.motivationmirror.fragments.ShowImageFragment">

    <Button
        android:id="@+id/back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/back_icon"
        android:onClick="onCancel" />

    <ImageView
        android:id="@+id/imgWishPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relate_share"
        android:contentDescription="@string/app_name"
        android:layout_below="@+id/back"
        android:layout_marginTop="@dimen/_10sdp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/relate_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_share_bg"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/upload_bg" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/upload_icon" />

    </RelativeLayout>


</RelativeLayout>