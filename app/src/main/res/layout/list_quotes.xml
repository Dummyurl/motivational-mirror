<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_list"
    tools:context="com.steadtech.motivationmirror.fragments.QuotesListFragment">

    <ImageButton
        android:id="@+id/img_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/back_icon"
        android:contentDescription="@string/app_name"
        android:onClick="onCancel" />

    <ListView
        android:id="@+id/lv_quotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relate_add_quote"
        android:layout_below="@+id/img_back"
        android:layout_marginTop="@dimen/_10sdp"
        android:divider="@color/bg_color_list_select"
        android:dividerHeight="@dimen/_1sdp"></ListView>

    <RelativeLayout
        android:id="@+id/relate_add_quote"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/linear_add_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_add_quote"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/add_quote_icon"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tv_add_your_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/add_quote"
                android:textColor="@color/bg_color_list_select"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
